import { getRandomWords, getRandomWordAsList } from './utils.js';

function updatePageWithRandomWord() {
  const nouns = {{ nouns | safe }};
  document.getElementById("randomWord").innerHTML = getRandomWordAsList(nouns, 2);
};

// Update random words when page loads
document.addEventListener("DOMContentLoaded", updatePageWithRandomWord);
