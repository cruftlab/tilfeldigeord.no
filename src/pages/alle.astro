---
import Layout from '../layouts/Layout.astro';
import { nouns } from '../lib/nouns.ts';
import { verbs } from '../lib/verbs.ts';
---

<Layout title="Alle ord">
  <div id="allWords">
    <h1>Alle ordene:</h1>
    
    <details>
      <summary><strong>Substantiv ({nouns.length})</strong></summary>
      <ul>
        {nouns.map((noun) => (
          <li>
            <a href={`/?ord=${encodeURIComponent(noun)}`}>{noun}</a>
          </li>
        ))}
      </ul>
    </details>

    <details>
      <summary><strong>Verb ({verbs.length})</strong></summary>
      <ul>
        {verbs.map((verb) => (
          <li>
            <a href={`/?ord=${encodeURIComponent(verb)}`}>{verb}</a>
          </li>
        ))}
      </ul>
    </details>
  </div>
</Layout>

<style>
  details {
    margin-bottom: 1rem;
  }

  summary {
    cursor: pointer;
    font-size: 1.1rem;
    padding: 0.5rem;
    user-select: none;
  }

  summary:hover {
    background-color: #f5f5f5;
  }

  ul {
    margin-top: 0.5rem;
  }
</style>