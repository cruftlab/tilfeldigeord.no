---
import Layout from '../layouts/Layout.astro';
import { nouns } from '../lib/nouns.ts';
---

<Layout title="Alle ord">
  <div id="allWords">
    <h1>Alle ordene:</h1>
    <ul>
      {nouns.map((noun) => (
        <li>
          <a href={`/?ord=${encodeURIComponent(noun)}`}>{noun}</a>
        </li>
      ))}
    </ul>
  </div>
</Layout>